<beans:beans xmlns="http://www.springframework.org/schema/security"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                    http://www.springframework.org/schema/security
                    http://www.springframework.org/schema/security/spring-security-3.2.xsd">


    <http use-expressions="true">

        <intercept-url pattern="/bcid/index.jsp" access="permitAll"/>

        <intercept-url pattern="/bcid/concepts.jsp" access="permitAll"/>
        <intercept-url pattern="/bcid/requestEZID.jsp" access="permitAll"/>
        <intercept-url pattern="/bcid/secure/**" access="isAuthenticated()"/>
        <intercept-url pattern="/bcid/css/**" access="permitAll"/>
        <intercept-url pattern="/bcid/js/**" access="permitAll"/>
        <intercept-url pattern="/bcid/javadoc/**" access="permitAll"/>
        <intercept-url pattern="/id/ark:**" access="permitAll"/>
        <intercept-url pattern="/id/ark:/**" access="permitAll"/>
        <intercept-url pattern="/id/ark:/**" access="permitAll"/>
        <intercept-url pattern="/id/metadata/ark:/**" access="permitAll"/>
        <intercept-url pattern="/id/groupService/metadata**" access="permitAll"/>
        <intercept-url pattern="/id/groupService/listTable**" access="permitAll"/>

        <intercept-url pattern="/id/elementService/select/resourceTypes**" access="permitAll"/>
        <intercept-url pattern="/id/elementService/resourceTypes**" access="permitAll"/>
        <intercept-url pattern="/bcid/login.jsp" access="permitAll"/>
        <intercept-url pattern="/bcid/bcid.wadl" access="permitAll"/>
        <intercept-url pattern="/bcid/wadl.xsl" access="permitAll"/>
        <intercept-url pattern="/bcid/error/**" access="permitAll"/>


        <form-login default-target-url="/bcid/index.jsp" always-use-default-target="true"/>
        <logout />
    </http>

    <authentication-manager>
        <authentication-provider>
            <password-encoder hash="md5"/>
            <jdbc-user-service data-source-ref="securityDataSource"/>
        </authentication-provider>
    </authentication-manager>


</beans:beans>