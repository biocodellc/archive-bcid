<beans:beans xmlns="http://www.springframework.org/schema/security"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                    http://www.springframework.org/schema/security
                    http://www.springframework.org/schema/security/spring-security-3.2.xsd">


    <http use-expressions="true">
        <intercept-url pattern="/index.jsp" access="permitAll"/>
        <intercept-url pattern="/concepts.jsp" access="permitAll"/>
        <intercept-url pattern="/requestEZID.jsp" access="permitAll"/>
        <intercept-url pattern="/secure/**" access="isAuthenticated()"/>
        <intercept-url pattern="/css/**" access="permitAll"/>
        <intercept-url pattern="/js/**" access="permitAll"/>
        <intercept-url pattern="/rest/resolverService**" access="permitAll"/>
        <intercept-url pattern="/rest/resolverService/**" access="permitAll"/>
        <intercept-url pattern="/rest/ark:/**" access="permitAll"/>
        <intercept-url pattern="/rest/rdf/ark:/**" access="permitAll"/>
        <intercept-url pattern="/rest/groupService/metadata**" access="permitAll"/>
        <intercept-url pattern="/rest/elementService/select/resourceTypes**" access="permitAll"/>
        <intercept-url pattern="/rest/elementService/resourceTypes**" access="permitAll"/>
        <intercept-url pattern="/login.jsp" access="permitAll"/>

        <intercept-url pattern="/javadoc/**" access="permitAll"/>
        <intercept-url pattern="/rest/bcid.wadl" access="permitAll"/>
        <intercept-url pattern="/wadl.xsl" access="permitAll"/>

        <intercept-url pattern="/**" access="isAuthenticated()"/>
        <form-login default-target-url="/index.jsp" always-use-default-target="true"/>
        <logout/>
    </http>

    <authentication-manager>
        <authentication-provider>
            <password-encoder hash="md5"/>

            <jdbc-user-service data-source-ref="securityDataSource"/>
        </authentication-provider>
    </authentication-manager>


</beans:beans>